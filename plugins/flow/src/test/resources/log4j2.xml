<?xml version="1.0" encoding="UTF-8" ?>
<Configuration name="Light">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level](%-36c{1.}:%-3L) %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.geeksaga.flow" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>